<%= render "shared/errors", obj: @article %>
<%= form_for @article do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control", placeholder: "Title of the article", autofocus: true %>
  </div>
  
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control", placeholder: "Body of article", rows: 10 %>
  </div>
  
  <div class="form-group">
    <%= f.submit class: "btn btn-primary" %>
    <%= link_to "Cancel", articles_path, class: "btn btn-danger" %>
  </div>
<% end %>