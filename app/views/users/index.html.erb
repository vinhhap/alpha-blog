<h1 class="text-center">All Alpha Bloggers</h1>
<div class="text-center">
  <%= will_paginate %>
  <% @users.each do |user| %>
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div class="well list-description">
          <p class="text-center"><%= link_to gravatar_for(user), user_path(user) %></p>
          <h4 class="text-center"><%= link_to user.username, user_path(user) %></h4>
          <p><%= pluralize(user.articles.count, 'article') %></p>
          <% if logged_in? && current_user.admin? %>
            <li><%= link_to "Delete this user", user_path(user), method: :delete, data: { confirm: "Are you sure you want to delete the user and all their articles?" } %></li>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
  <%= will_paginate %>
</div>
